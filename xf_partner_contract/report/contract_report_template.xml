<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="custom_contract_layout">
            <div class="header">
                <div class="row">
                    <div class="head_cont">
                    </div>
                    <div class="head_logo">
                        <img t-if="res_company.logo"
                             t-att-src="image_data_uri(res_company.logo)"
                             alt="logo"
                             style="height:50px; width:150px; position: absolute; right: 25mm; top:0mm;"/>

                        <span class="company_address"
                              t-field="res_company.partner_id"
                              t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                              style="text-align:center; position: absolute; right: 40mm; top:20mm;"/>
                    </div>
                </div>
            </div>
            <div class="article">
                <t t-raw="0"/>
            </div>
            <div class="footer" style="height:40mm;">
                <div class="row footer_log">

                    <div class="col-12 ">
                        <div class="col-3">
                            <h4>
                                <em style="font-style: normal;font-size: 1.5rem; text-align:center; font-weight: 900; color: #69C;">
                                    THE
                                </em>
                                <em style="font-style: normal;font-size: 1.5rem; text-align:center; font-weight: 900; color: #50c878;">
                                    SUSTAINABLE
                                </em>
                                <br/>
                                <em style="font-style: normal;font-size: 1.5rem; text-align:center; font-weight: 900; color: #69C;">
                                    OIL, FATS &amp; FUEL
                                    <br/>
                                    SOLUTION
                                </em>
                            </h4>
                        </div>
                        <div class="col-3" style="position: absolute; left: 309px; top: 8px;">
                            J.A ABRAHAMBOULEVARD 68
                            <br/>
                            KRALENDIJK, BONAIRE
                            <br/>
                            DUTCH CARIBBEAN
                        </div>
                        <div class="col-3" style="position: absolute; left: 604px; top: 8px;">
                            <em style="font-style: normal; text-align:center; font-weight: 701; color: #69C;">CAMBER OF
                                COMMERCE:
                            </em>
                            12462
                            <br/>
                            <em style="font-style: normal; text-align:center; font-weight: 701; color: #69C;">CRIB
                                NUMBER:
                            </em>
                            310023750
                            <br/>
                            <em style="font-style: normal; text-align:center; font-weight: 701; color: #69C;">VIHB
                                REGISTATION NUMBER:
                            </em>
                            536189VIHB
                            <br/>
                            INFO@GLOBALUCOCOMPANY.COM
                        </div>
                        <div class="col-3" style="position: absolute; right: 0px; top: 8px;">
                            <img src="/xf_partner_contract/static/description/niwo.png" width="100px" height="auto"
                                 style="padding-right: 12px;"/>
                            <img src="/xf_partner_contract/static/description/ISCC.png" width="100px" height="auto"
                                 style="padding-left: 12px;"/>
                        </div>
                        <hr width="100%"
                            style="border-top: 22px solid rgba(0, 0, 0, 0.1); background-color:#6699CC; margin-top: 2rem;"/>
                    </div>
                    <div class="col-6">
                        <div class="footer_web">
                            <!--                            <h4>www.protec-dz.com</h4>-->
                        </div>
                    </div>
                </div>
            </div>
        </template>


        <template id="invoice_custom_report_template">
            <t t-call="web.html_container">
                <t t-call="xf_partner_contract.custom_layout">
                    <div class="page" style="background-image:url('/xf_partner_contract/static/description/back.jpg');
                        background-size:250mm 280mm; width:250mm; height:255mm; padding-top:40mm;">
                        <div class="text-left" style="margin-left: 40px;">
                            <h3 style="color:black;">
                                Invoice
                            </h3>
                            <br/>
                            <div>
                                <label style="width:160px;">
                                    Invoice Number
                                </label>
                                :&amp;nbsp;
                                <t t-esc="form['name']"/>
                            </div>
                            <div>
                                <label style="width:160px;">
                                    Date
                                </label>
                                :&amp;nbsp;
                                <t t-esc="form['invoice_date']"/>
                            </div>
                            <div>
                                <label style="width:160px;">
                                    Payment terms
                                </label>
                                :&amp;nbsp;
                                <t t-esc="term"/>
                            </div>
                            <div>
                                <label style="width:160px;">
                                    invoice due date
                                </label>
                                :&amp;nbsp;
                                <t t-esc="form['invoice_date_due']"/>
                            </div>
                            <div>
                                <label style="width:160px;">
                                    your revcybrosys:8015
                                </label>
                                :&amp;nbsp;
                            </div>
                            <br/>
                            <div>
                                <label style="width:160px;">
                                    Contract number
                                </label>
                                :&amp;nbsp;
                                <t t-esc="contract"/>
                            </div>
                            <div>
                                <label style="width:160px;">
                                    Incoterms
                                </label>
                                :&amp;nbsp;
                                <t t-esc="incoterm"/>
                            </div>
                            <div>
                                <label style="width:160px;">
                                    Packaging
                                </label>
                                :&amp;nbsp;
                                <t t-esc="package"/>
                            </div>
                            <div>
                                <label style="width:160px;">
                                    Country of origin
                                </label>
                                :&amp;nbsp;
                                <t t-esc="country"/>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-bordered" style=" margin-top:50px;"
                                       id="hash_config_table">
                                    <thead style="display: table-row-group; background-color:#6699CC;">
                                        <tr>
                                            <th class="text-center" style="width: 20%; color: white;" scope="col">
                                                Product
                                            </th>
                                            <th class="text-center" style="width: 20%; color: white;" scope="col">
                                                Container
                                                Number
                                            </th>
                                            <th class="text-center" style="width: 20%; color: white;" scope="col">
                                                Quantity MT
                                            </th>
                                            <th class="text-center" style="width: 20%; color: white;" scope="col">Price
                                                per
                                                MT
                                            </th>
                                            <th class="text-center" style="width: 20%; color: white;" scope="col">Line
                                                Total
                                            </th>
                                        </tr>
                                    </thead>
                                    <body>
                                        <t t-foreach="line" t-as="result">
                                            <tr>
                                                <td style="border: 1px solid #69c;">
                                                    <t t-esc="result['product_id']"/>
                                                </td>
                                                <td style="border: 1px solid #69c;">
                                                    <t t-esc="result['Container']"/>
                                                </td>
                                                <td style="border: 1px solid #69c;">
                                                    <t t-esc="result['Quantity']"/>
                                                </td>
                                                <td style="border: 1px solid #69c;">
                                                    <t t-esc="result['Price']"/>
                                                </td>
                                                <td style="border: 1px solid #69c;">
                                                    <t t-esc="result['Total']"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td style="border: 1px solid #69c; background-color: white;">
                                            </td>
                                            <td style="border: 1px solid #69c; background-color: white;">
                                            </td>
                                            <td style="border: 1px solid #69c; font-weight: bold; background-color: white;">
                                                Total MT &amp;nbsp;
                                                <t t-esc="total_qty"/>
                                            </td>
                                            <td style="border: 1px solid #69c; background-color: white;">
                                            </td>
                                            <td style="border: 1px solid #69c; font-weight: bold; background-color: white;">
                                                Total &amp;nbsp;
                                                <t t-esc="total_amount"/>
                                            </td>
                                        </tr>
                                    </body>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>


        <template id="contract_report_template">
            <t t-call="web.html_container">
                <t t-call="xf_partner_contract.custom_contract_layout">
                    <div class="page" style="background-image:url('/xf_partner_contract/static/description/back.jpg');
                        background-size:250mm 280mm; width:250mm; height:255mm; padding-top:5mm;">
                        <div class="text-left">
                            <h2>
                                <t t-if="type =='sale'">
                                    Sale Order
                                </t>
                                <t t-else="">
                                    Purchase order
                                </t>
                            </h2>
                        </div>
                        <div class="text-left">

                            <t t-if="form['date_start']">
                                <div>
                                    <label style="width:195px;">
                                        Start Date
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="date"/>
                                </div>
                            </t>
                            <t t-if="form['name']">
                                <div>
                                    <label style="width:195px;">
                                        <t t-if="type =='sale'">
                                            S.O. number
                                        </t>
                                        <t t-else="">
                                            P.O. number
                                        </t>
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['name']"/>
                                </div>
                            </t>
                            <span style="font-weight: bold;">
                                Specification
                            </span>
                            <t t-if="p">
                                <div>
                                    <label>
                                        product
                                    </label>
                                    <!--                                    :&amp;nbsp;-->
                                    <t t-set="i" t-value="1"/>
                                    <t t-foreach="p" t-as="result">
                                        <t t-if="i==1">
                                            <span style="padding-left:137px;">
                                                :&amp;nbsp;
                                                <t t-esc="result['product_name']"/>
                                            </span>
                                        </t>
                                        <t t-else="">
                                            <div style="padding-left:196px;">
                                                :&amp;nbsp;
                                                <t t-esc="result['product_name']"/>
                                            </div>
                                        </t>
                                        <t t-set="i" t-value="i + 1"/>
                                    </t>
                                </div>
                            </t>
                            <t t-if="form['ffa']">
                                <div>
                                    <label style="width:193px;">
                                        FFA
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['ffa']"/>
                                    <span style="padding-left:15mm;">
                                        <t t-esc="form['ffa_min_max']"/>
                                    </span>

                                </div>
                            </t>
                            <t t-if="form['m_and_i']">
                                <div>
                                    <label style="width:193px;">
                                        M&amp;I
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['m_and_i']"/>
                                    <span style="padding-left:15mm;">
                                        <t t-esc="form['m_and_i_min_max']"/>
                                    </span>

                                </div>
                            </t>
                            <t t-if="form['iv']">
                                <div>
                                    <label style="width:193px;">
                                        IV
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['iv']"/>
                                    <span style="padding-left:15mm;">
                                        <t t-esc="form['iv_min_max']"/>
                                    </span>

                                </div>
                            </t>
                            <t t-if="form['sulphur']">
                                <div>
                                    <label style="width:193px;">
                                        Sulphur
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['sulphur']"/>
                                    <span style="padding-left:15mm;">
                                        <t t-esc="form['sulphur_iv_min_max']"/>
                                    </span>

                                </div>
                            </t>
                            <t t-if="form['appearance']">
                                <div>
                                    <label style="width:193px;">
                                        Appearance
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['appearance']"/>
                                </div>
                            </t>
                            <div>
                                <label style="width:193px;">
                                    Prohibited materials
                                </label>
                                :&amp;nbsp;
                                Distillation's residues, acids oil, detergents, waxes, mineral oil,
                                esters, industrial chemicals, animal fat or
                                <span style="padding-left:200px;">
                                    any material of unknown origin (which in itself is unsuitable to produce biofuel)
                                </span>
                            </div>
                            <span style="font-weight: bold; padding-top:30px;">
                                Commercial terms
                            </span>
                            <t t-if="form['amount']">
                                <div>
                                    <label style="width:193px;">
                                        Price per MT
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['amount']"/>
                                    &amp;nbsp;
                                    <t t-esc="form['currency_id'][1]"/>

                                </div>
                            </t>
                            <t t-if="qty">
                                <div>
                                    <label style="width:193px;">
                                        Quantity
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="qty"/>
                                </div>
                            </t>
                            <t t-if="form['packaging']">
                                <div>
                                    <label style="width:193px;">
                                        Packaging
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['packaging']"/>
                                </div>
                            </t>
                            <t t-if="form['expected_containers']">
                                <div>
                                    <label style="width:193px;">
                                        Expected amount of containers
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['expected_containers']"/>
                                </div>
                            </t>
                            <t t-if="form['notes']">
                                <div>
                                    <label style="width:193px;">
                                        Delivery terms
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['notes']"/>
                                </div>
                            </t>
                            <t t-if="form['period_f_delivery']">
                                <div>
                                    <label style="width:193px;">
                                        Period of shipment and delivery
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="period_start"/>
                                    &amp;nbsp; to &amp;nbsp;
                                     <t t-esc="period_end"/>

                                </div>
                            </t>
                            <t t-if="form['payment_term_id']">
                                <div>
                                    <label style="width:193px;">
                                        Payment terms
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['payment_term_id'][1]"/>
                                </div>
                            </t>
                            <t t-if="form['trading_rule']">
                                <div>
                                    <label style="width:193px;">
                                        Applied trading rules
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['trading_rule']"/>
                                </div>
                            </t>
                            <t t-if="form['legislation']">
                                <div>
                                    <label style="width:193px;">
                                        Legislation
                                    </label>
                                    :&amp;nbsp;
                                    <t t-esc="form['legislation']"/>
                                </div>
                            </t>
                            <div style="padding-top:30px;">
                                In deviation from the NOFOTA trading rules, when the buyer can show irrevocable proof of
                                payment and the payment is not
                                received by seller due to international OFAC investigation of the seller, this purchase
                                order is still lawfully binding.
                            </div>
                            <span style="font-weight: bold;">
                                Discount clause
                            </span>
                            <div>
                                In the even the agreed upon values are exceeded a discount is applicable according to
                                below numbers and percentages.
                            </div>
                            <div>
                                <label style="width:193px;">
                                    FFA
                                </label>
                                :&amp;nbsp;
                                <label style="width:193px;">
                                    Above 5%
                                </label>
                                1% discount per 1 % off spec

                            </div>
                            <div>
                                <label style="width:193px;">
                                    M&amp;I
                                </label>
                                :&amp;nbsp;
                                <label style="width:193px;">
                                    Above 2%
                                </label>
                                1% discount per 1 % off spec

                            </div>
                            <div>
                                <label style="width:193px;">
                                    Iodine Value
                                </label>
                                :&amp;nbsp;
                                <label style="width:193px;">
                                    Below 60
                                </label>
                                1 USD discount per point off spec

                            </div>
                            <div>
                                <label style="width:193px;">
                                    Sulphur
                                </label>
                                :&amp;nbsp;
                                <label style="width:193px;">
                                    Above 50
                                </label>
                                1 USD discount per point off spec

                            </div>

                        </div>
                        <div class="row" style="page-break-before:always;
                                        background-image:url('/xf_partner_contract/static/description/back.jpg');
                                        background-size:250mm 280mm; width:250mm; height:255mm; padding-top:30mm;">
                            <div class="text-left" style="padding-left:30px;">
                                <div style="font-weight: bold; font-size: 26px;">
                                    Documents to be provided by seller
                                </div>
                                <div style="font-size: 26px;">
                                    - Commercial invoice
                                </div>
                                <div style="font-size: 26px;">
                                    - Annex VII
                                </div>
                                <div style="font-size: 26px;">
                                    - Green list waste contract
                                </div>
                                <div style="font-size: 26px;">
                                    - ISCC EU Delivery note
                                </div>
                                <div style="font-size: 26px;">
                                    - B/L copy, marked freight prepaid inc ship. on board stamped, telex or
                                    seaway bill
                                </div>
                                <br/>
                                <br/>
                                <div style="font-size: 26px;">
                                    We kindly ask you to return a legally signed copy of this contract to us by
                                    e-mail.
                                    In case we don’t receive the legally signed copy of this contract within 2
                                    working
                                    days after contract date, we will take this contract as a final acceptance
                                    of the conditions mentioned.
                                </div>
                                <div class="row" style="padding-top:50px; font-size: 23px;">
                                    <div class="col-6">
                                        <div>
                                            <t t-if="type =='sale'">
                                                Seller:&amp;nbsp;
                                                <t t-esc="res_company.name"/>
                                            </t>
                                            <t t-else="">
                                                Buyer:&amp;nbsp;
                                                <t t-esc="res_company.name"/>
                                            </t>
                                        </div>
                                        <div>
                                            Date :
                                        </div>
                                        <br/>
                                        <div>
                                            Signature :
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div>
                                            <t t-if="type =='sale'">
                                                Buyer:
                                                <t t-esc="partner['name']"/>
                                            </t>
                                            <t t-else="">
                                                Seller:&amp;nbsp;
                                                <t t-esc="partner['name']"/>
                                            </t>
                                        </div>
                                        <div>
                                            Date :
                                        </div>
                                        <br/>
                                        <div>
                                            Signature :
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
